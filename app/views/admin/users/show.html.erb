<h1><%= t('.title') %></h1>

<p>
  <strong><%= t('activerecord.attributes.user.name') %>:</strong>
  <%= @user.name %>
</p>


<p>
  <strong><%= t('activerecord.attributes.user.email') %>:</strong>
  <%= @user.email %>
</p>


<p>
  <strong><%= t('activerecord.attributes.user.admin') %>:</strong>
  <%= @user.admin ? 'あり' : 'なし' %> 
</p>


<table>
  <thead>
    <tr>
      <th><%= Task.human_attribute_name(:title) %></th>
      <th><%= Task.human_attribute_name(:content) %></th>
      <th><%= Task.human_attribute_name(:created_at) %></th>
      <th><%= Task.human_attribute_name(:deadline_on) %></th>
      <th><%= Task.human_attribute_name(:priority) %></th>
      <th><%= Task.human_attribute_name(:status) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at.strftime("%Y/%m/%d %H:%M") %>
        <td><%= task.deadline_on.strftime("%Y/%m/%d") %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td><%= link_to t('common.show'), task, class:"show-task" %></td>
        <td><%= link_to t('common.edit'), edit_task_path(task), class:"edit-task" %></td>
        <td><%= link_to t('common.destroy'), task, method: :delete, data: { confirm: t('common.confirm_destroy') }, class:"destroy-task" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('common.back'), admin_users_path, id:"back" %>

<br>
